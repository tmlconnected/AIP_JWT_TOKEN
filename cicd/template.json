{
	"kind": "Template",
	"apiVersion": "v1",
	"metadata": {
		"name": "${NAME}",
		"annotations": {
			"tags": "${NAME}",
			"iconClass": "icon-${NAME}",
			"openshift.io/provider-display-name": "Tata Motors"
		}
	},
	"labels": {
		"template": "${NAME}",
		"app": "${NAME}"
	},
	"objects": [
		{
			"apiVersion": "v1",
			"kind": "ImageStream",
			"metadata": {
				"name": "${NAME}"
			},
			"spec": {
				"lookupPolicy": {
					"local": false
				}
			}
		},
		{
			"apiVersion": "v1",
			"kind": "BuildConfig",
			"metadata": {
				"labels": {
					"app": "${NAME}"
				},
				"name": "${NAME}"
			},
			"spec": {
				"output": {
					"to": {
						"kind": "ImageStreamTag",
						"name": "${NAME}:latest"
					}
				},
				"source": {
					"binary": {
						
					},
					"type": "Binary"
				},
				"strategy": {
					"sourceStrategy": {
						"from": {
							"kind": "ImageStreamTag",
							"name": "fuse7-java-openshift:1.2",
							"namespace": "openshift"
						},
						"type": "Source"
					}
				}
			}
		},
		{
			"kind": "Service",
			"apiVersion": "v1",
			"metadata": {
				"name": "${NAME}",
				"annotations": {
					"description": "Exposes and load balances the application pods"
				}
			},
			"spec": {
				"ports": [
					{
						"name": "8080-tcp",
						"port": 8080,
						"targetPort": 8080
					},
					{
						"name": "8778-tcp",
						"port": 8778,
						"targetPort": 8778
					},
					{
						"name": "9779-tcp",
						"port": 9779,
						"targetPort": 9779
					},
					{
						"name": "8081-tcp",
						"port": 8081,
						"targetPort": 8081
					},
					{
						"name": "8085-tcp",
						"port": 8085,
						"targetPort": 8085
					}
				],
				"selector": {
					"name": "${NAME}"
				}
			}
		},
		{
			"kind": "Route",
			"apiVersion": "v1",
			"metadata": {
				"name": "${NAME}"
			},
			"spec": {
				"port": {
					"targetPort": "8085-tcp"
				},
				"to": {
					"kind": "Service",
					"name": "${NAME}"
				}
			}
		},
		{
			"kind": "DeploymentConfig",
			"apiVersion": "v1",
			"metadata": {
				"name": "${NAME}",
				"annotations": {
					"description": "Defines how to deploy the application server",
					"template.alpha.openshift.io/wait-for-ready": "true"
				}
			},
			"spec": {
				"strategy": {
					"type": "Rolling"
				},
				"replicas": 1,
				"selector": {
					"name": "${NAME}"
				},
				"triggers": [],
				"template": {
					"metadata": {
						"name": "${NAME}",
						"labels": {
							"name": "${NAME}"
						}
					},
					"spec": {
						"containers": [
							{
	                        "env": [
	                               {
	                                 "name": "AB_ENABLED",
	                                 "value": "jolokia"
	                               },
	                               {
	                                 "name": "TZ",
	                                 "value": "Asia/Kolkata"
	                               },
	                               {
										"name": "CONSENT_USER_NAME",
										"valueFrom": {
											"secretKeyRef": {
												"key": "username",
												"name": "consent-creds"
											}
										}
									},
									{
										"name": "CONSENT_USER_PASSWORD",
										"valueFrom": {
											"secretKeyRef": {
												"key": "password",
												"name": "consent-creds"
											}
										}
									},
									{
										"name": "PROJECT",
										"value": "${PROJECT}"
									},
									{
										"name": "TOKEN_EXPIRED_TIME",
										"value": "${TOKEN_EXPIRED_TIME}"
									}
                                    ],
								"name": "${NAME}",
								"image": "docker-registry.default.svc.cluster.local:5000/${PROJECT}/${NAME}:latest",
								"ports": [
									{
										"containerPort": 8080
									},
									{
										"containerPort": 8081
									},
									{
										"containerPort": 8778,
                                                                                "name": "jolokia"
									},
									{
										"containerPort": 9779
									},
									{
										"containerPort": 8085
									}
								],
								"readinessProbe": {
									"timeoutSeconds": 3,
									"initialDelaySeconds": 3,
									"httpGet": {
										"path": "/health",
										"port": 8081
									}
								},
								"resources": {
                                              "limits": {
                                                   "memory": "1Gi",
			                           "cpu": "1000m"
                                              },
                                              "requests": {
                                                   "cpu": "200m",
                                                   "memory": "256Mi"
                                              }
                                },
								"volumeMounts": [
									{
										"mountPath": "/deployments/config",
										"name": "${NAME}-config"
									}
								],
								"livenessProbe": {
									"timeoutSeconds": 3,
									"initialDelaySeconds": 30,
									"httpGet": {
										"path": "/health",
										"port": 8081
									}
								}
							}
						],
						"volumes": [
							{
								"configMap": {
								    "items": [
                                        {
                                            "key": "application-${PROJECT}.properties",
                                            "path": "application.properties"
                                        }
                                    ],
									"name": "${NAME}"
								},
								"name": "${NAME}-config"
							}
						]
					}
				}
			}
		}
	],
	"parameters": [
		{
			"name": "NAME",
			"displayName": "Name",
			"required": true,
			"value": "jwt-token-creation-api"
		},
		{
			"name": "PROJECT",
			"displayName": "Project",
			"description": "Project",
			"required": true
		}
	]
}
